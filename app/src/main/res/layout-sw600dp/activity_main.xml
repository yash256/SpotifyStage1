<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
    android:baselineAligned="true"
    android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
    tools:context="com.udacitiy.nanodegree.spotifystage1.MainActivity">

        <fragment
        android:id="@+id/fragment_main"
        android:name="com.udacitiy.nanodegree.spotifystage1.MainActivityFragment"
        tools:layout="@layout/fragment_main" android:layout_width="0dp"
            android:layout_weight="3"
        android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:id="@+id/top_tracks_container"></FrameLayout>

</LinearLayout>
